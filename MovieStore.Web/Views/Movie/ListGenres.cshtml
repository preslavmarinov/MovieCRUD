@model IEnumerable<MovieSystem.Web.Models.GenreModels.GenreCreateModel>

@{
    ViewData["Title"] = "ListGenres";
}

<h1>List of Genres</h1>
<p>
    <a asp-action="AddGenre" class="create">Create New Genre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="delete" asp-action="DeleteGenre" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete Genre:@item.Name')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
